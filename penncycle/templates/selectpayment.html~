{% block scripts %}
  <script>
    //console.log(pcnum);


    $("#amount-id").val(10);
    $('#paybycredit').click(function(){
      $("#penncardnum-id").val(pcnum);
      $('#payform').submit();
    });
    
    $('.paybutton').click(function () {
      var pcnum = $("#id_penncard").val();
      $("#penncardnum-id").val(pcnum);
      var plan = $("select option:selected").attr("name");
      var _href = $(this).attr('href');
      $(this).attr('href', _href + pcnum + "/" + plan);

    });
  </script>
{% endblock scripts %}
